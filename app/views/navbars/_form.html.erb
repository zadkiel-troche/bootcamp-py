<%= form_with(model: navbar) do |form| %>
  <% if navbar.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(navbar.errors.count, "error") %> prohibited this navbar from being saved:</h2>

      <ul>
        <% navbar.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :id, style: "display: block", class: "form-control" %>
    <%= form.number_field :id %>
  </div>

  <div>
    <%= form.label :label, style: "display: block" %>
    <%= form.text_field :label %>
  </div>

  <div>
    <%= form.label :url, style: "display: block" %>
    <%= form.text_field :url %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
